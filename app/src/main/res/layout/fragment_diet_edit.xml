                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/dinner_fats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:text="@string/fats"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/dinner_carbohydrates"
                            android:layout_width="wrap_content"
